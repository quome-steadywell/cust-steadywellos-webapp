# For any secrets here, you can replace the value with a 1Password secret reference
# see https://developer.1password.com/docs/cli/secret-reference-syntax/ for more information
# i.e. ANTHROPIC_API_KEY=op://Shared/repo.quome-agents/ANTHROPIC_API_KEY

# Application Settings
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=GENERATE_A_SECURE_RANDOM_KEY
SECURE_SCHEME=https

#Project Settings
# Default values
DEFAULT_USERNAME=YOUR_DEFAULT_USERNAME
DEFAULT_REPOSITORY=palliative-care-platform
DEFAULT_APPLICATION_NAME=palliative-care
DEFAULT_PORT=8080
DEFAULT_CONTAINER_PORT=5000

# Tag Management
DEFAULT_TAG=intel-0.0.1
ARM_CURRENT_TAG=arm-0.0.1
INTEL_CURRENT_TAG=intel-0.0.1

# Cloud deployment configuration
CLOUD_ORG_ID=YOUR_QUOME_ORG_ID
CLOUD_APP_ID=YOUR_QUOME_APP_ID

# Database Configuration
POSTGRES_USER=pallcare
POSTGRES_PASSWORD=pallcarepass
POSTGRES_DB=pallcare_db
DATABASE_URL=postgresql://pallcare:pallcarepass@db:5432/pallcare_db
#
# Development State
# Set to PROD or TEST - if TEST populates database with test data...
DEV_STATE=TEST

# Auto logout and logout warning defaults
AUTO_LOGOUT=TEST
AUTO_LOGOUT_TIME=10
WARNING_TIME=5
TIME=MINUTES

# Docker Configuration
DOCKER_SECRET_NAME=pallcare-docker-credentials
DOCKER_USERNAME=YOUR_DOCKER_USERNAME
DOCKER_TOKEN=YOUR_DOCKER_PAT

# AWS Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-west-2
S3_BUCKET=YOUR_S3_BUCKET_NAME

# Twilio Configuration
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER

# RAG Model Configuration
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Error Tracking Configuration
SENTRY_DSN=YOUR_SENTRY_DSN_URL
SENTRY_TRACES_SAMPLE_RATE=0.1
ENVIRONMENT=development
APP_VERSION=1.0.0

# Security Configuration
AUTH_TOKEN_EXPIRY_DAYS=1
MAX_LOGIN_ATTEMPTS=5
PASSWORD_RESET_EXPIRY_HOURS=24
SESSION_TIMEOUT_MINUTES=30

# Email Configuration
SMTP_SERVER=SMTP.EXAMPLE.COM
SMTP_PORT=587
SMTP_USERNAME=YOUR_SMTP_USERNAME
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SMTP_FROM_EMAIL=NO_REPLY@EXAMPLE.COM

# QUOME
QUOME_KEY=YOUR_QUOME_API_KEY

# Test Webhook
WEBHOOK_URL=https://abc123.ngrok.io
